### Custom aliases

# Manage configurations
alias editaliases='sudo nano ~/.bash_aliases'
alias updateconfigs='bash ~/configs/update.sh'
alias applyconfigs='bash ~/configs/apply.sh'

# Misc
alias cl='clear'
alias fucksake='xrandr -o normal' #In case the screen flips
alias giefssh='cat ~/.ssh/id_rsa.pub'
alias aliases='cat ~/.bash_aliases'
alias edithosts='sudo nano /etc/hosts'
alias bell='. ~/.bell.sh'

# Apt
alias sagi='sudo apt-get install'
alias sagp='sudo apt-get purge'
alias sagud='sudo apt-get update'
alias sagug='sudo apt-get upgrade'
alias acs='apt-cache search'

# Git
alias g='git'
alias gs='git status'
alias gl='git log --oneline'
alias glf='git log --graph --abbrev-commit --decorate --format=format:"%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)" --all'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias ga='git add'
alias gps='git push'
alias gpso='git push -u origin'
alias gpl='git pull'
alias gf='git fetch'
alias gb='git checkout'
alias gbm='git checkout master'
alias gbn='git checkout -b'
alias gbp='git checkout -'
alias gd='git diff'
alias grm='git rebase master'
alias wip='git add . && git commit -m "wip"'
alias nah='git reset HEAD --hard'

# Development
alias up='. ~/.dotfiles/scripts/up.sh'
alias remigrate='. ~/.dotfiles/scripts/rerun-last-migration.sh'
alias art='php artisan'
alias punit='vendor/bin/phpunit'
alias pf='vendor/bin/phpunit --filter='
alias ackc='ack --ignore-dir={storage,vendor,laradock}'
alias fixphpstorm='ibus restart'

# VPN
alias startvpn='sudo systemctl start openvpn@client'
alias stopvpn='sudo systemctl stop openvpn@client'


# Fuckery
alias fuckingbluetooth='pactl load-module module-bluetooth-discover'

